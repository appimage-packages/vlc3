########################################################################
# GCC6
# Cannot use new gcc6 on extra-tools to ragel failure http://osdir.com/ml/general/2016-01/msg26911.html
# contribs also had many gcc6 failures. So only building vlc itself with gcc6 as requested.
########################################################################
sudo add-apt-repository --yes ppa:ubuntu-toolchain-r/test
sudo apt-get update
sudo apt-get --yes install  gcc-6 g++-6
sudo update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-6 60 --slave /usr/bin/g++ g++ /usr/bin/g++-6
########################################################################
# Build VLC itself
########################################################################
cd /vlc
export CFLAGS+="-O2 -g -O0 -fPIC"
export CPPFLAGS+="-I/app/usr/include -I/usr/include/ -I/usr/include/x86_64-linux-gnu -I/usr/include/X11/"
export LDLIBS+="$(pkg-config --libs libavutil libavcodec libva x11)"
./bootstrap
./configure --enable-static --disable-chromaprint --disable-bluray --enable-alsa=true --enable-pulse=true --disable-chromecast \
--prefix=$VLC_PREFIX/usr

make -j 8

make install

########################################################################
# Build complete
# Now creating the AppDir
########################################################################
wget -q https://github.com/probonopd/AppImages/raw/master/functions.sh -O ./functions.sh
. ./functions.sh

cd /

cp $VLC_PREFIX/usr/share/applications/vlc.desktop .
sed -i -e "s|Exec=.*|Exec=vlc|g" vlc.desktop
sed -i -e "s|Icon=.*|Icon=vlc.png|g" vlc.desktop
cp $VLC_PREFIX/usr/share/icons/hicolor/48x48/apps/vlc.png .
get_desktopintegration vlc


APPDIR=VLC
mkdir -p /$APPDIR/$APP.AppDir
cd  /$APPDIR/$APP.AppDir
get_apprun
mv /vlc.* .
mkdir -p ./usr/lib/qt5/; mv /vlc/contrib/x86_64-linux-gnu/plugins $_
mkdir -p ./usr/share; mv $VLC_PREFIX/usr/share/vlc $_
mkdir -p ./usr/share/icons; mv $VLC_PREFIX/usr/share/icons/hicolor $_
mv $VLC_PREFIX/usr/share/{applications,mime,locale} ./usr/share
export LD_LIBRARY_PATH=./usr/lib/:$LD_LIBRARY_PATH

patch_usr
move_lib
copy_deps # Three runs to ensure we catch indirect ones
delete_blacklisted
mkdir -p ./usr/bin; mv $VLC_PREFIX/usr/bin/*vlc* $_
mv $VLC_PREFIX/usr/lib/libvlc* ./usr/lib/
mkdir -p ./usr/lib; mv $VLC_PREFIX/usr/lib/vlc $_
mv /vlc/contrib/x86_64-linux-gnu/lib/* ./usr/lib/


# We don't bundle the developer stuff
rm -rf $VLC_PREFIX/usr/include || true
rm -rf $VLC_PREFIX/usr/lib/cmake || true
rm -rf $VLC_PREFIX/usr/lib/pkgconfig || true
rm -rf ./usr/share/doc/vlc/libvlc/ || true
find /$APPDIR/$APP.AppDir/usr/lib/ -name '*.la' | xargs -i rm {}
strip $VLC_PREFIX/usr/bin/* $VLC_PREFIX/usr/lib/* $VLC_PREFIX/usr/lib/vlc/plugins/*/* || true

########################################################################
# AppDir complete
