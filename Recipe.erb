# Workaround for:
# Getting warning about outdated gettext
# Update gettext to 0.19.6
cd /usr/src
wget -c -T 10 ftp://ftp.gnu.org/gnu/gettext/gettext-0.19.7.tar.gz
tar xvf gettext-0.19.7.tar.gz
cd gettext-0.19.7
./configure --prefix=/usr    \
            --disable-static
make -j 8 && make install
chmod -v 0755 /usr/lib/preloadable_libintl.so
cd /vlc


########################################################################
# The "Contrib" method.
# If the libraries are not provided by your distribution,
# you may be better off linking VLC with them statically.
########################################################################
export PATH=/vlc/extras/tools/build/bin/:/vlc/contrib/x86_64-linux-gnu/bin:$PATH
export LD_LIBRARY_PATH=/vlc/extras/tools/build/lib:/vlc/contrib/x86_64-linux-gnu/lib:$LD_LIBRARY_PATH
cd contrib
mkdir native
cd native
../bootstrap --enable-iconv --enable-xau --disable-bluray --disable-xcb --disable-cddb

########################################################################
# Build VLC itself
########################################################################

# Should say:
# "vlc aliases : cvlc rvlc qvlc svlc"
# Don't proceed if qvlc is not listed.

make -j 8

cd ../..

# I cannot seem to get contribs to be useful as it builds in the wrong order and thus xcb fails.
# build xcb stack from source.
cd /usr/src
wget http://xcb.freedesktop.org/dist/xcb-proto-1.12.tar.bz2
tar -jxvf xcb-proto-1.12.tar.bz2
cd xcb-proto-1.12
./configure --prefix=/usr
make -j8
make install

cd /usr/src
wget http://xcb.freedesktop.org/dist/libxcb-1.12.tar.bz2
tar -jxvf libxcb-1.12.tar.bz2
cd libxcb-1.12
sed -i "s/pthread-stubs//" configure &&

./configure --prefix=/usr \
            --enable-xinput   \
            --without-doxygen \
            --docdir='${datadir}'/doc/libxcb-1.12 &&
make
make install

cd /usr/src
wget https://sourceforge.net/projects/libcddb/files/libcddb/1.3.2/libcddb-1.3.2.tar.bz2
tar -jxvf libcddb-1.3.2.tar.bz2
cd libcddb-1.3.2
./configure --prefix=/usr
make -j8
make install

## Cannot use new gcc6 on extra-tools to ragel failure http://osdir.com/ml/general/2016-01/msg26911.html
sudo add-apt-repository --yes ppa:ubuntu-toolchain-r/test
sudo apt-get update
sudo apt-get --yes install  gcc-6 g++-6
sudo update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-6 60 --slave /usr/bin/g++ g++ /usr/bin/g++-6
cd /vlc
./bootstrap
 ./configure --disable-chromaprint --disable-ncurses --prefix=/usr

make -j 8

APP=VLC
make install DESTDIR=/$APP/$APP.AppDir

########################################################################
# Build complete
# Now creating the AppDir
########################################################################

LOWERAPP=${APP,,}
cd /$APP/

wget -q https://github.com/probonopd/AppImages/raw/master/functions.sh -O ./functions.sh
. ./functions.sh

cd $APP.AppDir

export ARCH=x86_64

cp usr/share/icons/hicolor/128x128/apps/vlc.png .

get_apprun

cp ./usr/share/applications/vlc.desktop .
sed -i -e s|Exec=.*|Exec=vlc|g vlc.desktop

rm -rf usr/share/icons/hicolor/48x48/

mkdir -p ./usr/lib/qt5
cp -r /usr/lib/x86_64-linux-gnu/qt5/plugins/ ./usr/lib/qt5/

export LD_LIBRARY_PATH=./usr/lib/:$LD_LIBRARY_PATH

copy_deps ; copy_deps ; copy_deps # Three runs to ensure we catch indirect ones
move_lib
delete_blacklisted

# We don't bundle the developer stuff
rm -rf usr/include || true
rm -rf usr/lib/cmake || true
rm -rf usr/lib/pkgconfig || true
rm -rf rm -rf ./usr/share/doc/vlc/libvlc/ || true
find /VLC/VLC.AppDir/usr/lib/ -name '*.la' | xargs -i rm {}
strip usr/bin/* usr/lib/* usr/lib/vlc/plugins/*/* || true

get_desktopintegration vlc

GLIBC_NEEDED=$(find . -type f -executable -exec strings {} \; | grep ^GLIBC_2 | sed s/GLIBC_//g | sort --version-sort | uniq | tail -n 1)
VERSION=3.0.0.git$(cat /vlc/src/revision.txt).glibc$GLIBC_NEEDED # FIXME

